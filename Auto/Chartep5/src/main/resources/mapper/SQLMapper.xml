<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.course.model">
    <!--登录测试-->
    <select id="LoginCase" resultType="com.course.model.LoginCase" parameterType="Integer">
        select * from loginCase where id=#{id};
    </select>
    <!--查询用户信息测试-->
    <select id="GetUserInfo" parameterType="Integer" resultType="com.course.model.GetUserInfoCase">
        select * from getUserInfoCase where id = #{id};
    </select>
    <!--查询用户列表信息测试-->
    <select id="GetUserList" parameterType="Integer" resultType="com.course.model.GetUserListCase">
        select * from getUserListCase where id = #{id};
    </select>
    <!--更新用户信息测试-->
    <select id="UpdateUserInfo" parameterType="Integer" resultType="com.course.model.UpdateUserInfoCase">
        select * from updateUserInfoCase where id = #{id};
    </select>
    <!--新增用户测试-->
    <select id="AddUserInfo" parameterType="Integer" resultType="com.course.model.AddUserCase">
        select * from addUserCase where id = #{id};
    </select>
    <!--增加用户测试-->
    <select id="addUser" parameterType="com.course.model.AddUserCase" resultType="com.course.model.User">
        select * from user
        <trim prefix="where" prefixOverrides="and">
            <if test="null != userName and '' != userName">
                and userName=#{userName}
            </if>
            <if test="null != passWd and '' != passWd">
                and passWd=#{passWd}
            </if>
            <if test="null != age and '' != age">
                and age=#{age}
            </if>
            <if test="null != sex and '' != sex">
                and sex=#{sex}
            </if>
            <if test="null != permission and '' != permission">
                and permission=#{permission}
            </if>
            <if test="null != isDelete and '' != isDelete">
                and isDelete=#{isDelete}
            </if>
        </trim>
        ;
    </select>
</mapper>