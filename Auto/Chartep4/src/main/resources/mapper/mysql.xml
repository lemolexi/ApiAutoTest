<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.course">

    <insert id="addUser" parameterType="com.course.module.User">
        insert into study(id,name,age,sex) values (#{id},#{name},#{age},#{sex});
    </insert>
    <delete id="delUser" parameterType="com.course.module.User">
        DELETE FROM study WHERE id = #{id};
    </delete>
    <update id="updataUser" parameterType="com.course.module.User">
        UPDATE study SET name = #{name} WHERE id = #{id};
    </update>
    <select id="getUser" resultType="Integer">
        select age from study where name = #{name};
    </select>
    <select id="getUsersex" resultType="String">
        select sex from study where name = #{name};
    </select>
</mapper>